---
layout: 'base.njk'
---

    <section class="overview-rental">
      <div class="container">
        <div class="upper-part flow">
          <span class="tag-rental">For Rent</span>
          <h1 class="rental-title">{{ title }}</h1>
          <p>{{ location }}</p>
          <p>Price <span style="font-weight: 700">{{ price }}</span></p>
        </div>
        <div class="info-rental">
          <div>
            <img src="{{ image }}" class="rental_image" alt="{{ imageAlt }}">
          </div>
          <div class="content-rental">
            <div class="details-rental">
                <h2 class="title-details">{{ squareFeet }}</h2>
                <p>Square Area</p>
            </div>
            <div class="details-rental">
                <h2 class="title-details">{{ floor }}</h2>
                <p>Floor</p>
            </div>
            <div class="details-rental">
                <h2 class="title-details">{{ bedrooms }}</h2>
                <p>Bedrooms</p>
            </div>
            <div class="details-rental">
                <h2 class="title-details">{{ bathrooms }}</h2>
                <p>Bathrooms</p>
            </div>
            <div class="details-rental">
                <h2 class="title-details">{{ carParking }}</h2>
                <p>Car parking</p>
            </div>
          </div>
        </div>
        <div class="description-rental info-rental">
          <div class="description">
          <p>{{  description  }}</p>
          <div class="feature-group flow">
            <div class="feature-rental"><i><svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg"><path d="M11.9999 0C5.38321 0 0 5.38309 0 11.9999C0 18.6168 5.38321 24 11.9999 24C18.6167 24 23.9999 18.6168 23.9999 11.9999C23.9999 5.38309 18.6168 0 11.9999 0ZM18.8905 9.97305L11.3516 17.512C11.031 17.8326 10.6049 18.009 10.1516 18.009C9.69832 18.009 9.27221 17.8326 8.95165 17.512L5.10936 13.6697C4.78881 13.3492 4.61225 12.923 4.61225 12.4698C4.61225 12.0163 4.78881 11.5902 5.10936 11.2697C5.42979 10.9491 5.85591 10.7726 6.30932 10.7726C6.7626 10.7726 7.18884 10.9491 7.50927 11.2698L10.1515 13.9119L16.4904 7.57301C16.8109 7.25245 17.237 7.07602 17.6903 7.07602C18.1436 7.07602 18.5697 7.25245 18.8903 7.57301C19.5522 8.23491 19.5522 9.3114 18.8905 9.97305Z" fill="#005243"/></svg></i><p class="feature-rental">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p></div>
