---
layout: 'base.njk'
---
<section id="subpage-thefold" class="subpage-thefold">
  <div class="rentals-background"></div>
  <div class="container">
    <div class="subpage-content-widget">
      <div class="breadcrumb-content">
        <ul class="breadcrumb">
        <li>
          <a href="/index">Home</a>
        </li>
        <li>
          <span class="seperator">
            <i class="fa-solid fa-chevron-right"></i>
          </span>
        </li>
        <li>
          <a href="/apartments/rent/apartments">Apartments</a>
        </li>
        <li>
          <span class="seperator">
            <i class="fa-solid fa-chevron-right"></i>
          </span>
        </li>
        <li style="font-weight: 700;">{{ title }}</li>
        </ul>
      </div>
      <h1 class="section-title">{{ title }}</h1>
    </div>
  </div>
</section>

    <section class="overview-rental">
      <div class="container">
        <div class="info-rental">
          <div class="articleImage">
            <img src="{{ image }}" class="rental_image" alt="{{ imageAlt }}">
          </div>
          <div class="content-rental">
            <div class="details-rental">
                <span class="value">{{ squareArea }} <sup>m²</sup></span>
                <span class="label1">Square Area</span>
            </div>
            <div class="details-rental">
                <span class="value">{{ floor }}</span>
                <span class="label1">Floor</span>
            </div>
            <div class="details-rental">
                <span class="value">{{ bedrooms }}</span>
                <span class="label1">Bedrooms</span>
            </div>
            <div class="details-rental">
                <span class="value">{{ bathrooms }}</span>
                <span class="label1">Bathrooms</span>
            </div>
            <div class="details-rental">
                <span class="value">{{ carParking }}</span>
                <span class="label1">Car parking</span>
            </div>
          </div>
        </div>
        <div class="description-rental info-rental">
          <div class="description">
          <p>{{ content | safe }}</p>
          <div class="feature-group flow">
            <div class="feature-rental">
              <i>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M11.9999 0C5.38321 0 0 5.38309 0 11.9999C0 18.6168 5.38321 24 11.9999 24C18.6167 24 23.9999 18.6168 23.9999 11.9999C23.9999 5.38309 18.6168 0 11.9999 0ZM18.8905 9.97305L11.3516 17.512C11.031 17.8326 10.6049 18.009 10.1516 18.009C9.69832 18.009 9.27221 17.8326 8.95165 17.512L5.10936 13.6697C4.78881 13.3492 4.61225 12.923 4.61225 12.4698C4.61225 12.0163 4.78881 11.5902 5.10936 11.2697C5.42979 10.9491 5.85591 10.7726 6.30932 10.7726C6.7626 10.7726 7.18884 10.9491 7.50927 11.2698L10.1515 13.9119L16.4904 7.57301C16.8109 7.25245 17.237 7.07602 17.6903 7.07602C18.1436 7.07602 18.5697 7.25245 18.8903 7.57301C19.5522 8.23491 19.5522 9.3114 18.8905 9.97305Z" fill="#005243"/>
                </svg>
              </i>
              <p>{{ amenities[0] }}</p>
            </div>
            <div class="feature-rental">
              <i>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M11.9999 0C5.38321 0 0 5.38309 0 11.9999C0 18.6168 5.38321 24 11.9999 24C18.6167 24 23.9999 18.6168 23.9999 11.9999C23.9999 5.38309 18.6168 0 11.9999 0ZM18.8905 9.97305L11.3516 17.512C11.031 17.8326 10.6049 18.009 10.1516 18.009C9.69832 18.009 9.27221 17.8326 8.95165 17.512L5.10936 13.6697C4.78881 13.3492 4.61225 12.923 4.61225 12.4698C4.61225 12.0163 4.78881 11.5902 5.10936 11.2697C5.42979 10.9491 5.85591 10.7726 6.30932 10.7726C6.7626 10.7726 7.18884 10.9491 7.50927 11.2698L10.1515 13.9119L16.4904 7.57301C16.8109 7.25245 17.237 7.07602 17.6903 7.07602C18.1436 7.07602 18.5697 7.25245 18.8903 7.57301C19.5522 8.23491 19.5522 9.3114 18.8905 9.97305Z" fill="#005243"/>
                </svg>
              </i>
              <p>{{ amenities[1] }}</p>
            </div>
            <div class="feature-rental">
              <i>
                <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                  <path d="M11.9999 0C5.38321 0 0 5.38309 0 11.9999C0 18.6168 5.38321 24 11.9999 24C18.6167 24 23.9999 18.6168 23.9999 11.9999C23.9999 5.38309 18.6168 0 11.9999 0ZM18.8905 9.97305L11.3516 17.512C11.031 17.8326 10.6049 18.009 10.1516 18.009C9.69832 18.009 9.27221 17.8326 8.95165 17.512L5.10936 13.6697C4.78881 13.3492 4.61225 12.923 4.61225 12.4698C4.61225 12.0163 4.78881 11.5902 5.10936 11.2697C5.42979 10.9491 5.85591 10.7726 6.30932 10.7726C6.7626 10.7726 7.18884 10.9491 7.50927 11.2698L10.1515 13.9119L16.4904 7.57301C16.8109 7.25245 17.237 7.07602 17.6903 7.07602C18.1436 7.07602 18.5697 7.25245 18.8903 7.57301C19.5522 8.23491 19.5522 9.3114 18.8905 9.97305Z" fill="#005243"/>
                </svg>
              </i>
              <p>{{ amenities[2] }}</p>
            </div>
          </div>
          </div>
          <div class="contact-rental">
          <form class="contact-form flow" action="">
            <legend class="title-contact">Contact Us</legend>
            <p class="paragraph-contact">To schedule a visit, contact us by email, or phone, and we’ll reply within a day.</p>
            <input id="Name" name="Name" type="text" placeholder="Full Name" required>
            <input id="Email" name="Email" type="email" placeholder="Email/phone number" required>
            <textarea id="text" name="text" type="text" placeholder="Message" required></textarea>
            <button class="btn contact btn--primary">Send message</button>
          </form>
          </div>
        </div>
        <div class="google-maps"><iframe class="location" src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d1467.629055987022!2d21.167318419045586!3d42.63468777820855!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x13549f36fc6eca45%3A0xa25707a35a50e95f!2sPrishtina%20Premium%20Residence!5e0!3m2!1sen!2s!4v1723212296521!5m2!1sen!2s" width="870" height="400" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe></div>
    </section>
    <section id="featured-rentals" class="featured-rentals dedicated">
      <div class="container">
        <h1 class="section-title">Featured Rentals</h1>
      
        <ul role="list" class="articles-list">
      
          {%- for post in collections.featured | reverse -%}
            {% include 'article-snippet.njk' %}
          {%- endfor %}
  
        </ul>
      </div>
  </section>

