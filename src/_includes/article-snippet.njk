<li>
    <article class="snippet">
        <div class="thubnail-rental"><a href="{{ post.url }}"><image src="{{ post.data.image }}" alt="{{ post.data.imageAlt }}" class="article-image"></image></a></div>
        <h2 class="snippet-title"><a href="{{ post.url }}">{{ post.data.title }}</a></h2>
        <p>{{ post.data.location }}</p>
        <div class="flex-group">
            <div class="amenities-group"><span>{{ post.data.bedrooms }}</span><span>Beds</span></div>
            <div class="amenities-group"><span>{{ post.data.bathrooms }}</span><span>Baths</span></div>
            <div class="amenities-group"><span>{{ post.data.squareFeet }}</span><span>ft2</span></div>
            <div class="amenities-group"><span>{{ post.data.terrace }}</span><span>Terra</span></div>
        </div>
        <p><span>from <span class="snippet-price">{{ post.data.price }}</span></span>
    </article>
